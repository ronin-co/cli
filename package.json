{
  "name": "@ronin/cli",
  "version": "0.2.2",
  "type": "module",
  "description": "The command-line interface for RONIN.",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "ronin": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "bun run --bun lint:tsc && bun run --bun lint:biome",
    "lint:biome": "biome check",
    "lint:tsc": "tsc --pretty",
    "format": "biome check --write && biome format --write",
    "test": "bun test",
    "build": "tsup ./src/index.ts --format esm",
    "prepare": "bun run build"
  },
  "keywords": [
    "database",
    "sql",
    "command-line"
  ],
  "author": "ronin",
  "license": "Apache-2.0",
  "tsup": {
    "banner": {
      "js": "#!/usr/bin/env bun"
    }
  },
  "dependencies": {
    "@iarna/toml": "2.2.5",
    "@inquirer/prompts": "7.2.0",
    "@ronin/compiler": "0.12.4",
    "@ronin/engine": "0.0.16",
    "chalk-template": "1.1.0",
    "get-port": "7.1.0",
    "ini": "5.0.0",
    "json5": "2.2.3",
    "open": "10.1.0",
    "ora": "8.1.0"
  },
  "devDependencies": {
    "bun-bagel": "1.1.0",
    "@ronin/schema": "0.1.2",
    "@biomejs/biome": "1.9.4",
    "@types/bun": "1.1.12",
    "@types/ini": "4.1.1",
    "tsup": "8.3.5",
    "typescript": "5.7.2"
  }
}
